<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/placeContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e0ffffff"
        android:padding="5dp"
        >

        <LinearLayout
            android:id="@+id/placeTypeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/actionContainer"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/alarmAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Alarm Address"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/range"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:text="Range"
                android:textColor="@color/grey"
                android:textSize="15sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/actionContainer"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/deleteAlarm"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_drawable"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:src="@mipmap/delete_accent"/>
            <ImageView
                android:id="@+id/cancelAlarm"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_drawable"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:src="@drawable/bell_cross_accent"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>