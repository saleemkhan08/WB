<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:minWidth="300dp"
              android:background="#eee"
              android:orientation="vertical"
              tools:context="in.org.whistleblower.fragments.ShareLocationFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/dialog_header_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/dialogTitle"
            android:text="@string/locationAlarms"
            android:textSize="@dimen/dialog_title"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/closeDialog"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_drawable"
            android:padding="13dp"
            android:src="@drawable/cross"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/emptyList"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/emptyListTextView"
            android:text="@string/noLocationNotificationsAreSet"
            style="@style/emptyList"
            />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/locationAlarmList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"/>

</LinearLayout>
