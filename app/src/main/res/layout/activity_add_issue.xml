<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            >

            <EditText
                android:id="@+id/issueTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/issue_title_hint"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:scrollHorizontally="false"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/issueTitle"
                android:layout_marginTop="10dp">

                <in.org.whistleblower.custom.view.SquareImageView
                    android:id="@+id/image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="70dp"
                    android:layout_alignTop="@+id/issueImg"
                    android:background="@drawable/issue_action_top"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/displayPic"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="12dp"
                        android:scaleType="centerCrop"
                        />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="70dp"
                        android:layout_toLeftOf="@+id/optionsIconContainer"
                        android:layout_toRightOf="@+id/displayPic"
                        android:gravity="center_vertical"
                        android:text="Anonymous"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        />

                    <LinearLayout
                        android:id="@+id/optionsIconContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/bg_drawable"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        >

                        <ImageView
                            android:id="@+id/optionsIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="20dp"
                            />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="70dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignTop="@+id/image_view"
                    android:background="@drawable/issue_action_bottom"
                    android:gravity="center_vertical"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/placeTypeName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="70dp"
                        android:background="@android:color/transparent"
                        android:paddingLeft="20dp"
                        android:paddingRight="50dp"
                        android:text="Edit Place Name"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:elevation="10dp"
                        />

                    <ImageView
                        android:id="@+id/editIcon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        />
                </RelativeLayout>

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/video_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                >

                <VideoView
                    android:id="@+id/video_view"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>

                <ImageView
                    android:id="@+id/play_pause_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_media_play"/>
            </FrameLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:elevation="20dp"
        android:orientation="horizontal"
        android:padding="13dp"
        android:weightSum="4"
        >

        <ImageView
            android:id="@+id/radius"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tint="@color/colorAccent"/>

        <ImageView
            android:id="@+id/zone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/anonymus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/post"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>